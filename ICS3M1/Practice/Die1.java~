public class Die1
{
  public static void main (String[] args)
  { 
    int die1;
    int die2;
    
    die1=(int)(Math.random() * 6) + 1;
    
    die2=(int)(Math.random() * 6) + 1;
    
    for (int x=0; die1==die2;x++)
    {
      die2=(int)(Math.random() * 6) + 1;
    }
    
    System.out.println(" Therefore it will take " + x + "die rolls for them to equal");
  }
}